<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="rmagick4j-IDE">
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#runsingle) -->
    <target name="run-selected-file-in-src">
        <fail unless="run.class">Must set property 'run.class'</fail>
        <ant antfile="build.xml" inheritall="false" target="jar"/>
        <java classname="${run.class}" failonerror="true" fork="true">
            <classpath>
                <pathelement path="jruby/jruby.jar:lib/jhlabs-filters.jar:lib/svgsalamander.jar"/>
                <pathelement location="ext/rmagick4j/classes"/>
            </classpath>
        </java>
    </target>
</project>
